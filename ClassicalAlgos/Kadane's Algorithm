// sum of maximum sum sub array

#include<bits/stdc++.h>
using namespace std ;

int maxsum(int arr[] , int n){
    
    int mxhere = arr[0], mxsofar = arr[0] ; 
    for(int i =1; i<n; i++){
        mxhere = max(arr[i] , arr[i]+mxhere);
        mxsofar = max(mxsofar, mxhere) ;
    }
    return mxsofar ;
}
int main() {
	int t ; cin>>t; 
	while(t--){
	    int n ; cin>>n ;
	    int arr[n] ;
	    for(int i =0; i<n; i++){
	        cin>>arr[i] ;
	    }
	    cout<<maxsum(arr, n)<<endl;
	}
	return 0;
}
